%h1 Sign Up

= form_for(@user) do |f|

  = render 'layouts/errors', model: @user

  .field
    = f.label :email
    %br
    = f.text_field :email

  .field
    = f.label :password
    %br
    = f.password_field :password

  .field
    = f.label :password_confirmation
    %br
    = f.password_field :password_confirmation

  .actions
    = f.submit :Signup

= link_to 'Log in', new_session_path
